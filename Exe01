Class Retangulo
	@largura
	@altura

	def set_largura (largura)
		if (largura > 0) then
			@largura = largura
		end
	end

	def get_largura
		puts @largura
	end

	def set_altura (altura)
		if (altura > 0) then
			@altura = altura
		end
	end

	def get_altura
		puts @altura
	end

	def area
		puts @largura * @altura
	end

	def perimetro
		puts 2 * (@largura + @altura)
	end

	def set_dimensoes (largura, altura)
		if (largura < 0) then
			largura *= -1
		end
		if (altura < 0) then
			altura *= -1
		end
		if (largura > 0 and altura > 0) then
			@largura = largura
			@altura = altura
		end
	end

	def quadrado?
		if (@largura == @altura) then 
			puts true
		end
		else 
			puts false
		end
	end
end

#Codigo de teste

r = Retangulo.new
ret.set_largura(3)
ret.set_altura(4)
ret.get_largura
ret.get_altura
ret.area
ret.perimetro
ret.set_dimensoes(5, 6)
ret.quadrado?

puts r
